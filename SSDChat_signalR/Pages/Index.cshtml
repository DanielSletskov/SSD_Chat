@page
@model IndexModel
@{
ViewData["Title"] = "Secure Chat";
}
<head title="Secure Chat">
    <title></title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/big-integer/1.6.48/BigInteger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
</head>
<h1>Secure Chat</h1>

<div class="chat-container">
    <div class="chat-header">
        <h3>Chat Room</h3>
        <div id="ConnectionStatus">Waiting for secure connection...</div>
    </div>
    
    <div class="user-info">
        <label for="SenderName">Your Name:</label>
        <input type="text" id="SenderName" placeholder="Enter your name" required>
    </div>
    <ul id="ChatMessages"></ul>

    <div class="input-area">
        <input type="text" id="Message" placeholder="Type your message..." >
        <button id="SendMessageBtn">Send</button>
    </div>
</div>

<!-- Load Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script src="/js/chat.js"></script>